    <system:String x:Key="StrMainBtn">Main Page</system:String>
    <system:String x:Key="DetailedInfoBtn">Detailed Information</system:String>
    <system:String x:Key="ConvertPageBtn">Convert Currency</system:String>
    <system:String x:Key="CloseBtn">Close Program</system:String>
